<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- BoxIcon -->
    <link href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" rel="stylesheet" />
    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/a099cf6fae.js" crossorigin="anonymous"></script>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700" rel="stylesheet" type="text/css" />
    <!-- TweenMAX -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.3/TweenMax.min.js"></script>
    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <title>Provon</title>
</head>

<body>
    <%- body %>
        <!--Cursor Html-->
    <div class="cursor">
        <div class="cursor__ball cursor__ball--big">
            <svg height="30" width="30">
                <circle cx="15" cy="15" r="12" stroke-width="0"></circle>
            </svg>
        </div>
        <div class="cursor__ball cursor__ball--small">
            <svg height="10" width="10">
                <circle cx="5" cy="5" r="4" stroke-width="0"></circle>
            </svg>
        </div>
    </div>
    <!--Cursor Style-->
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap");

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins";
        }

        body h1,
        body p,
        body a {
            color: #fff;
        }

        body .cursor {
            pointer-events: none;
        }

        body .cursor__ball {
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            mix-blend-mode: difference;
            z-index: 1000;
        }

        body .cursor__ball circle {
            fill: #f7f8fa;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
    </style>
    <!--Cursor Script-->
    <script>
        const $bigBall = document.querySelector(".cursor__ball--big");
        const $smallBall = document.querySelector(".cursor__ball--small");
        const $hoverables = document.querySelectorAll(".form-field");
        const $hoverables1 = document.querySelectorAll(".register");

        // Listeners
        document.body.addEventListener("mousemove", onMouseMove);
        for (let i = 0; i < $hoverables.length; i++) {
            $hoverables[i].addEventListener("mouseenter", onMouseHover);
            $hoverables[i].addEventListener("mouseleave", onMouseHoverOut);
        }
        for (let i = 0; i < $hoverables1.length; i++) {
            $hoverables1[i].addEventListener("focus", onMouseHover);
            $hoverables1[i].addEventListener("blur", onMouseHoverOut);
        }

        // Move the cursor
        function onMouseMove(e) {
            TweenMax.to($bigBall, 0.4, {
                x: e.pageX - 15,
                y: e.pageY - 15,
            });

            TweenMax.to($smallBall, 0.1, {
                x: e.pageX - 5,
                y: e.pageY - 7,
            });
        }

        // Hover an element
        function onMouseHover() {
            TweenMax.to($bigBall, 0.3, {
                scale: 2,
            });
        }

        function onMouseHoverOut() {
            TweenMax.to($bigBall, 0.3, {
                scale: 1,
            });
        }
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap');
    </style>
</body>

</html>